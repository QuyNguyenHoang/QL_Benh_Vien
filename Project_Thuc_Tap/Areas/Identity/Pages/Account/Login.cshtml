@page
@model LoginModel

@{
}

<h1>@ViewData["Title"]</h1>
<main class="bg-img">
    <style>
        .bg-img {
            background-image: url('/Images/bg-1.jpg'); /* đường dẫn hình ảnh */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
           
        }
    </style>

<div class="row justify-content-center">
    <div class="col-md-5">
        <section class="min-vh-100 d-flex align-items-center">
            <form id="account" method="post" class="p-4 shadow-sm bg-light rounded-3 w-100">
                <h2 class="text-danger text-center mb-4">ĐĂNG NHẬP</h2>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                
                <div class="input-group mb-3">
                    <span class="input-group-text bg-white">
                        <img src="~/Icons/profile-user.png" width="20" height="20" alt="Email" />
                    </span>
                    <input type="email" class="form-control" asp-for="Input.Email" placeholder="Enter your Email" />
                </div>

                
                <div class="input-group mb-3">
                    <span class="input-group-text bg-white">
                        <img src="~/Icons/lock.png" width="20" height="20" alt="Password" />
                    </span>
                    <input asp-for="Input.Password" class="form-control" placeholder="Enter your Password" autocomplete="new-password" aria-required="true" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger d-block mb-3"></span>

                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label fs-6 fst-italic" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-link text-decoration-none fst-italic fs-6">
                        Forgot Password?
                    </a>
                </div>

                
                <div class="d-grid mb-3">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-md">Log in</button>
                </div>

                
                <div class="text-center mb-3">
                    <p class="my-2">— Or —</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="text-decoration-none">
                            <img src="~/Icons/facebook.png" width="30" height="30" class="rounded-circle" alt="Facebook" />
                        </a>
                        <a href="#" class="text-decoration-none">
                            <img src="~/Icons/google.png" width="30" height="30" class="rounded-circle" alt="Google" />
                        </a>
                        <a href="#" class="text-decoration-none">
                            <img src="~/Icons/instagram.png" width="30" height="30" class="rounded-circle" alt="Instagram" />
                        </a>
                    </div>
                </div>


                <div class="d-flex justify-content-center">
                    <p class="mb-0">
                        No account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                           class="btn btn-link text-decoration-none fst-italic fs-6 p-0 mb-1">
                            Register
                        </a>
                    </p>
                </div>


            </form>
        </section>
    </div>
</div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
