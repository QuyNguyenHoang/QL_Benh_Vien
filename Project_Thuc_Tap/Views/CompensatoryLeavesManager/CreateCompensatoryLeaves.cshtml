@model Project_Thuc_Tap.Models.CompensatoryLeave

<h2 class="text-center text-danger">THÊM LỊCH NGHỈ BÙ</h2>
<div class="responsive">
    <form asp-action="CreateCompensatoryLeaves" method="post">
        <div class="container bg-light">
            <div class="form-group">
                <label class="form-label">Nhân viên</label>
                <input class="form-control" readonly value="@ViewBag.FullName" />
            </div>
            <div class="form-group">
                <label class="form-label">Ngày nghỉ bù</label>
                <input type="date" asp-for="CompensatoryDays" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Ca nghỉ</label>
                <select asp-for="Shift" class="form-select">
                    <option value="Sáng">Sáng</option>
                    <option value="Chiều">Chiều</option>
                    <option value="Tối">Tối</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Trạng thái</label>
                <select asp-for="Status" class="form-select">
                    <option value="True">Đã duyệt</option>
                    <option value="False">Chưa duyệt</option>
                    <option value="null">Đợi duyệt</option>
                </select>
            </div>
            <div class="mt-3">
            <button type="submit"class="btn btn-primary">Thêm</button>
            <button type="button"class="btn btn-secondary btn-danger" onclick="goBack()">Huỷ</button>
            <script>
                 function goBack(){
                    window.history.back();
                }
            </script>
            </div>
        </div>
    </form>
</div>