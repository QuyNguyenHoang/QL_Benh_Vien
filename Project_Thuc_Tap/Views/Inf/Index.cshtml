@model Project_Thuc_Tap.Models.User

<main class="container my-4">
    <h2 class="text-center text-primary mb-4">Thông Tin Cá Nhân</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 bg-light p-4 rounded shadow-sm">
            <dl class="row">
                <dt class="col-sm-4">Họ tên</dt>
                <dd class="col-sm-8">@Model.FullName</dd>

                <dt class="col-sm-4">Ngày vào</dt>
                <dd class="col-sm-8">@Model.CreatedDate</dd>

                <dt class="col-sm-4">Giới tính</dt>
                <dd class="col-sm-8">@(Model.Sex.HasValue && Model.Sex == true ? "Nam" :"Nữ")</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                

                <dt class="col-sm-4">Số điện thoại</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4">Phòng</dt>
                <dd class="col-sm-8">@(Model.Room != null ? Model.Room.RoomName : "Chưa có phòng")</dd>

                <dt class="col-sm-4">Ngày sinh</dt>
                <dd class="col-sm-8">@Model.BirthDate?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Địa chỉ</dt>
                <dd class="col-sm-8">@Model.Address</dd>
            </dl>

            <div class="text-center mt-3">
                <a asp-controller="UserManager" asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
            </div>
        </div>
    </div>
</main>
