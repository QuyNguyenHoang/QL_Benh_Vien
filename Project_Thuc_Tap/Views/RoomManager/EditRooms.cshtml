@model Project_Thuc_Tap.Models.Room

<main class="container my-4 min-vh-100">
    <h2 class="text-center text-danger mb-4">Sửa Thông Tin Phòng</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form asp-action="EditRooms" method="post" class="bg-light p-4 rounded-3 shadow-sm border">
                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">Tên phòng</label>
                    <input asp-for="RoomName" class="form-control" placeholder="Nhập tên phòng..." />
                    <span asp-validation-for="RoomName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Nhập mô tả..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary me-2">Cập nhật</button>
                    <button type="button" class="btn btn-danger" onclick="window.history.back()">Huỷ</button>
                </div>
            </form>
        </div>
    </div>
</main>
