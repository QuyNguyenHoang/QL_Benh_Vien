<!DOCTYPE html>
<html >

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
    <title>@ViewData["Title"] - Project_Thuc_Tap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project_Thuc_Tap.styles.css" asp-append-version="true" />
    <title>Trang chủ - Quản lý lịch trực</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="#">Quản lý lịch trực</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/DutyScheduleForUser/DutySchedule4User">Lịch trực</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/TimeKeepingForUser/TimeKeeping4User">Chấm công</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Cài đặt</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/CompensatoryLeaves4User/Index">Lịch nghỉ bù</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    @RenderBody();
    
    <footer class="border-top footer text-muted ">
        <div class="container mt-5">
            &copy; 2025 - Hệ thống quản lý lịch trực và chấm công - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
