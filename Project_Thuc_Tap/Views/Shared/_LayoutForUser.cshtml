<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project_Thuc_Tap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/Icons/global-aid.png" width="48" height="48" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link active" href="/Home/ViewUser">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" href="/DutyScheduleForUser/DutySchedule4User">Lịch trực</a></li>
                        <li class="nav-item"><a class="nav-link" href="/TimeKeepingForUser/TimeKeeping4User">Chấm công</a></li>
                        <li class="nav-item"><a class="nav-link" href="/CompensatoryLeaves4User/Index">Lịch nghỉ bù</a></li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Inf/Index">Hồ sơ cá nhân</a>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted py-4">
        <div class="container text-center">
            &copy; 2025 - Hệ thống quản lý lịch trực và chấm công - <a href="/Home/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
